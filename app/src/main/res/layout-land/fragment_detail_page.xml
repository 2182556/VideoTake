<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.DetailPage.MovieDetailPageFragment"
    android:id="@+id/fragment_detail_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/movie_image"
                android:layout_width="220dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/movie_title_placeholder"
                android:textSize="26sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/movie_image" />


            <TextView
                android:id="@+id/movie_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description_placeholder"
                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.38"
                app:layout_constraintStart_toEndOf="@id/movie_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_ratingicon" />

            <ImageView
                android:id="@+id/movie_ratingicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rating_star"
                tools:layout_editor_absoluteX="320dp"
                tools:layout_editor_absoluteY="48dp"
                app:layout_constraintTop_toBottomOf="@id/movie_title"
                app:layout_constraintStart_toEndOf="@+id/movie_image" />

            <TextView
                android:id="@+id/movie_ratingint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintTop_toBottomOf="@id/movie_title"
                app:layout_constraintStart_toEndOf="@+id/movie_ratingicon"/>

            <Button
                android:id="@+id/addmovietolistbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/movie_releasedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="releasedate"
                app:layout_constraintStart_toEndOf="@id/movie_title"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/movie_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="genre"
                app:layout_constraintTop_toBottomOf="@id/movie_releasedate"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/movie_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="age"
                app:layout_constraintTop_toBottomOf="@id/movie_genre"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/movie_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="language"
                app:layout_constraintTop_toBottomOf="@id/movie_age"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/ratemoviebutton"
                android:layout_width="49dp"
                android:layout_height="30dp"
                android:text="Rate"
                app:layout_constraintStart_toEndOf="@id/movie_ratingint"
                app:layout_constraintTop_toBottomOf="@id/movie_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>